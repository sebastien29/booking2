= form_for(@livraison) do |f|
  - if flash[:notice]
    #error_explanation
      = flash[:notice]
  - if @livraison.errors.any?
    #error_explanation
      %h2
        = pluralize(@livraison.errors.count, "error")
        %p prohibited this livraison from being saved:

      %ul
      - @livraison.errors.full_messages.each do |msg|
        %li
          = msg
  .field
    = f.label :date
    %br
    = f.datetime_select :date

  .field
    = f.label :adresse
    %br
    = f.text_area :adresse

  .actions
    = f.submit